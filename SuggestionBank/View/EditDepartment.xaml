<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuggestionBank.View.EditDepartment">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">
            <Entry Text="{Binding Departments.Name}" Placeholder="Nome do Departamento"/>

            <Button Text="Salvar" Command="{Binding SaveCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
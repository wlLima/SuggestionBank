<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuggestionBank.View.EditDepartment"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Entry Placeholder="Nome do Departamento" Text="{Binding Departments.Name}" />

            <Button
                Command="{Binding SaveCommand}"
                Text="Salvar"
                VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
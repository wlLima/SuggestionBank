<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuggestionBank.View.ListSuggestions"
             Title="Lista de Sugestões">
    <ContentPage.Content>
        <StackLayout>


            <ListView x:Name="SuggestionView" IsPullToRefreshEnabled="true" Margin="10,10" SeparatorColor="Gray" ItemsSource="{Binding ListSuggestions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell TextColor="#000" Text="{Binding Suggestion}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>
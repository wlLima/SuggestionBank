<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuggestionBank.View.CreateSuggestion"
             Title="Cadastrar Sugestão">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">
            <Entry Text="{Binding Suggestions.Collaborator}" Placeholder="Nome do Colaborador"/>
            <Entry Text="{Binding Suggestions.Departament}" Placeholder="Departamento"/>

            <Editor Text="{Binding Suggestions.Suggestion}" Placeholder="Sugestão" HeightRequest="80" />
            <Editor Text="{Binding Suggestions.Justification}" Placeholder="Justificativa" HeightRequest="80" />

            <Button Text="Salvar" Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
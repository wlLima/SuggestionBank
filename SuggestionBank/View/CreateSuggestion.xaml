<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuggestionBank.View.CreateSuggestion"
             Title="Cadastrar Sugestão">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">
            <Entry Placeholder="Nome do Colaborador"/>
            <Entry Placeholder="Departamento"/>
            
            <Editor Placeholder="Sugestão" HeightRequest="80" />
            <Editor Placeholder="Justificativa" HeightRequest="80" />
            
            <Button Text="Salvar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>